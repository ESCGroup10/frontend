<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/expandedTenantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:id="@+id/tenantCompany"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="type"
                    android:layout_gravity="center"
                    android:id="@+id/tenantType"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="institution"
                    android:layout_gravity="center"
                    android:id="@+id/tenantInstitution"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="location"
                    android:layout_gravity="center"
                    android:id="@+id/tenantLocation"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="owner name"
                    android:layout_gravity="center"
                    android:id="@+id/tenantName"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/startSafetyChecklistButton"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="start audit" />

    </LinearLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|center"
        android:textColor="@color/red"
        android:text="delete tenant"
        android:id="@+id/deleteTenantButton"/>

</LinearLayout>