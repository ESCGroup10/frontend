<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/resolvingCaseSection"
    android:visibility="gone">

    <TextView
        android:id="@+id/resolutionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:paddingVertical="10dp"
        android:background="@color/header_green"
        android:text="Resolution"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take photo or upload from gallery"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginVertical="20dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/cameraButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/imageview_border"
            android:src="@drawable/camera"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/uploadButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/imageview_border"
            android:src="@drawable/upload_image"
            android:layout_gravity="center_horizontal"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tentativeImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Preview Image"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/resolvedImageTentative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imageview_border"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resolvedImageTentativePlaceholder"
        android:layout_width="327dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:text="Loading image..."
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/light_grey_semi_transparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resolvedCommentsEditTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Description of resolution"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/resolvedCommentsEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="@string/describe_how_you_resolved_the_problem"
        android:gravity="top|left"
        android:paddingHorizontal="5dp"
        android:textSize="20sp"
        android:background="@drawable/imageview_border"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="@string/confirm"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@color/advance_button_green"
        android:layout_marginVertical="40dp"/>

</LinearLayout>