<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resolvingRejectedImageCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingHorizontal="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    tools:visibility="visible"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/resolvingRejectedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imageview_border"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/resolved_image" />

        <TextView
            android:id="@+id/resolvingRejectedImageViewPlaceholder"
            android:layout_width="325dp"
            android:layout_height="200dp"
            android:elevation="3dp"
            android:text="Loading image..."
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:background="#fff5ed"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>