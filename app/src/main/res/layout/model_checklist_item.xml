<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:background="@color/cardview_dark_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Default text to be replaced" />

        <LinearLayout
            android:id="@+id/checkbox_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_question"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:weightSum="100">

            <View
                android:id="@+id/color_status_indicator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textview_true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="33"
                android:background="@color/cardview_light_background"
                android:text="True" />

            <TextView
                android:id="@+id/textview_false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox_true"
                android:layout_weight="33"
                android:background="@color/cardview_light_background"
                android:text="False" />

            <TextView
                android:id="@+id/textview_na"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox_false"
                android:layout_weight="33"
                android:background="@color/cardview_light_background"
                android:text="NA" />


        </LinearLayout>

        <EditText
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox_level"
            android:layout_margin="10dp"
            android:hint="Remarks" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>